@media @tablet {
    .l-left-column .l-side-column {
        .l-side-column:first-child {
            width: 50%;
            float: left;
            padding-left: 0px;
            padding-right: 11px;
        }
        .l-side-column:last-child {
            width: 50%;
            float: left;
            padding-left: 11px;
            padding-right: 0px;
        }
    }
    .l-right-column .l-side-column{
        .l-side-column:first-child {
            width: 50%;
            float: left;
            padding-left: 0px;
            padding-right: 11px;
        }
        .l-side-column:last-child {
            width: 50%;
            float: left;

            padding-left: 11px;
            padding-right: 0px;
        }
    }
}


@media @laptop {
    .content-container {
        margin-bottom: 1em;
    }
}

@media @mobile {
    .l-split-narrow {
        .content-container {
            h2 {
                .header-font;
                display: block;
                font-size: 1.125rem;
                margin-bottom: 0px;
                padding-bottom: 0px;
                clear: both;
            }
            h3 {
                .header-font;
                font-size: 1.188rem;
                line-height: 1;
                margin: 0 0 1em;
            }
            .ico {
                float: right;
            }
        }
    }
}

